# ===========================================
# EVOLUTION API - CONFIGURACIÓN CLÍNICA MÉDICA
# Copiar a .env y completar con valores reales
# ===========================================

# PUERTO DEL SERVIDOR (Render requiere PORT)
PORT=10000

# CONFIGURACIÓN DE LA INSTANCIA
INSTANCE_NAME=kore

# AUTENTICACIÓN
AUTHENTICATION_API_KEY=CLINICA-MEDICAL-2025-SUPER-SEGURA

# URL DEL SERVIDOR (actualizar con tu dominio de Render)
SERVER_URL=https://tu-evolution-api.onrender.com

# WEBHOOK HACIA N8N (tu n8n actual)
WEBHOOK_URL=https://n8n-medical-bot.onrender.com/webhook/evolutionAPIKORE

# CONFIGURACIÓN ADICIONAL WHATSAPP
BROWSER_CLIENT=Chrome (Linux)
BROWSER_VERSION=

# CONFIGURACIÓN DE LOGS
LOG_LEVEL=info
LOG_COLOR=true

# CONFIGURACIÓN DE RECONEXIÓN
RECONNECT_INTERVAL=3000
MAX_RECONNECT_ATTEMPTS=10

# CONFIGURACIÓN DE ARCHIVOS
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image,audio,video,document

# CONFIGURACIÓN DE SEGURIDAD
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
